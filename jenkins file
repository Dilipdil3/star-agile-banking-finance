def containerName = "banking-finance"
def tag = "latest"
def dockerHubUser = "alishataj"
def httpPort = "8084"

node {
    stage('Checkout') {
        checkout scm
    }

    stage('Build') {
        sh "mvn clean install"
    }

    stage("Image Prune") {
        sh "docker image prune -a -f"
    }

    stage('Image Build') {
        sh "docker build -t ${dockerHubUser}/${containerName}:${tag} --no-cache ."
        echo "Image build complete"
    }

    stage('Pushing to DockerHub'){
        echo 'Pushing the docker image to DockerHub'
        withCredentials([string(credentialsId: 'dockerhub', variable: 'dockerhub')]) {
            sh "docker login -u $alishataj -p ${dockerhub}"
            sh "docker push $alishataj/$banking-finance:${tag}"
        }
    }
}
